# SQLite database path
# Leave empty on Railway when using a mounted volume:
# the app will use RAILWAY_VOLUME_MOUNT_PATH/portfolio.db automatically.
DB_PATH=./data/portfolio.db

# Admin session expiration in days
ADMIN_SESSION_TTL_DAYS=30

# Seeded admin account (change in production)
SEED_ADMIN_EMAIL=lnieuwenhuis48@icloud.com
SEED_ADMIN_PASSWORD=change-me-strong-password

# SMTP settings for contact form notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Receives contact form submissions
CONTACT_EMAIL=contact@safasfly.dev

# Comma-separated list of allowed browser origins for CORS
CORS_ORIGINS=http://localhost:5173,https://safasfly.dev,https://www.safasfly.dev,https://staging.safasfly.dev
